<%- include('../partials/head', {title: 'Admin Panel'}) %>
<%- include('../partials/adminnav') %>
<%- include('../partials/flash') %>
<div class="formContainer">



  <form action="/instagram" method="post" class="formStyles" enctype="multipart/form-data">
    
    <label class="form-label" for="name">Name</label>
    <input id="name" type="text" name="name" placeholder="Marketing" class="form-control" />
    <label class="form-label" for="description">Description</label>
    <input id="description" type="text" name="description" placeholder="Over 10 years..." class="form-control" />
    <label class="form-label" for="file">Background Image</label>
    <input id="image" type="file" name="image"  accept="image/*"  class="form-control" />
    <button class="btn btn-success mt-3 w-100" type="submit">Save</button>
  </form>




</div>
<div class="centeredContainer">
  <h1 class="centeredHeading">Previous Posts</h1>
</div>

<div class="previousSection">
  <% if(posts.length) {%>
  <div class="contentWrapper">
    <% posts.map(({name, _id, description,imagePath}) => { %>
    <div class="post">
      <div style="width: 300px; height: 300px;">
        <img style="width: 100%; height: auto;" src="<%=imagePath %>" alt="">
      
      </div>
      <div class="imgContent">
        <p class="mainTitle"><%= name %></p>
        <p class="description"><%= description %></p>
        <!-- <p class="date">5/27/15</p> -->
      </div>
      <div class="buttonWrapper">
        <a href="/instagram/edit/<%= _id %>" class="btn btn-warning">Edit</a>
        <form action="/instagram/delete/<%= _id %>" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>
  <% }else{ %>
  <p class="centeredText">No post found!</p>
  <% } %>
</div>
<%- include('../partials/body') %>
