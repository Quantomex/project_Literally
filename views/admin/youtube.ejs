<%- include('../partials/head', {title: 'Admin Panel'}) %>
<%- include('../partials/adminnav') %>
<%- include('../partials/flash') %>
<div class="formContainer">


 <form action="/youtube" method="post" class="formStyles" enctype="multipart/form-data">
    
    <label class="form-label" for="name">Name</label>
    <input id="name" type="text" name="name" placeholder="Podcast name" class="form-control" />
    <label class="form-label" for="description">Description</label>
    <input id="description" type="text" name="description" placeholder="Lorem Ipsum is simply..." class="form-control" />
    <label class="form-label" for="detail">Details</label>
    <input id="detail" type="text" name="detail" placeholder="10 SEP, 2023 - 30 min - 9 Episode" class="form-control" />
    <label class="form-label" for="url">Youtube URL</label>
    <input id="url" type="text" name="url" placeholder="https://www.youtube.com/watch?...." class="form-control" />
    <label class="form-label" for="heart">Hearts</label>
    <input id="heart" type="text" name="heart" placeholder="10.5K" class="form-control" />
    <label class="form-label" for="view">Views</label>
    <input id="view" type="text" name="view" placeholder="10.5K" class="form-control" />
    <label class="form-label" for="file">Image</label>
    <input id="image" type="file" name="image"  accept="image/*"  class="form-control" />
    <button class="btn btn-success mt-3 w-100" type="submit">Save</button>
  </form>
</div>
<div class="centeredContainer">
  <h1 class="centeredHeading">Previous Posts</h1>
</div>
<div class="previousSection">
  <% if(posts.length) {%>
  <div class="contentWrapper">
    <% posts.map(({name, _id, description,detail, heart,view,imagePath, url}) => { %>
    <div class="post">
      <div style="width: 300px; height: 300px;">
        <img style="width: 100%; height: auto;" src="<%=imagePath %>" alt="">
      
      </div>
     <div class="imgContent">
        <p class="mainTitle">Name: <%= name %></p>
        <p class="description">Des: <%= description %></p>
        <p class="mainTitle">Detail: <%= detail %></p>
        <p class="description">URL: <%= url %></p>
        <span class="mainTitle">Hearts: <%= heart %></span>
        <span class="mainTitle">Views: <%= view %></span>
        <!-- <p class="date">5/27/15</p> -->
      </div>
      <div class="buttonWrapper">
        <a href="/youtube/edit/<%= _id %>" class="btn btn-warning">Edit</a>
        <form action="/youtube/delete/<%= _id %>" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>
  <% }else{ %>
  <p class="centeredText">No post found!</p>
  <% } %>
</div>
<%- include('../partials/body') %>
